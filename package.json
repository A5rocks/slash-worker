  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.0.0",
    "@types/node": "^14.14.12",
    "fork-ts-checker-webpack-plugin": "^6.0.6",
    "prettier": "^2.0.5",
    "slash-commands": "^1.0.5",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^5.10.1"
  },
  "dependencies": {
    "@stablelib/ed25519": "^1.0.1",
    "@stablelib/hex": "^1.0.0",
    "@stablelib/utf8": "^1.0.0"
